repeat wait() until game
repeat wait() until game:GetService("VirtualUser")
repeat wait() until game.Players.LocalPlayer

local VirtualUser=game:service'VirtualUser'
game:service('Players').LocalPlayer.Idled:connect(function()
VirtualUser:CaptureController()
VirtualUser:ClickButton2(Vector2.new())
end)
_G.Credits = {
  "Created by Code002Lover & Ente_sama",
  ["Discord"] = "8ytFhuj"
}
local marketplaceService = game:GetService("MarketplaceService")
local lp = game.Players.LocalPlayer
function getname(id)
  return marketplaceService:GetProductInfo(id, Enum.InfoType.Asset).Name
end
local library = loadstring(game:HttpGet("https://raw.githubusercontent.com/Mystikfluu/uilib/master/uilib.lua"))()
local window = library:CreateWindow("ZeroTwo Hub")
local main = window:CreateFolder("Main")

function farm(name)
  for i,v in pairs(game.Workspace:GetChildren()) do
    if(string.find(v.Name,name)) then
      if(v:FindFirstChild("HealthGui")) then
        local args = {
            [1] = "Animal Selected",
            [2] = v.CharId.Value
        }
        game:GetService("ReplicatedStorage").RemoteEvent:FireServer(unpack(args))
        local args = {
            [1] = "Animal Hit",
            [2] = v.CharId.Value
        }
        local health = tonumber(string.split(v.HealthGui.Health.Amount.Text,"/")[1])
        repeat
          game:GetService("ReplicatedStorage").RemoteEvent:FireServer(unpack(args))
          wait()
          if(v:FindFirstChild("HealthGui")) then
            health = tonumber(string.split(v.HealthGui.Health.Amount.Text,"/")[1])
          else
            health = 0
          end
        until health == 0
      end
    end
  end
end

main:Box("Mob-Name","string",function(value)
  _G.Name = value or "Chicken"
  end)

main:Toggle("Auto Farm",function(toggle)
  _G.AF = toggle
  while wait() and _G.AF do
    if(_G.Name) then
      farm(_G.Name)
    end
  end
end)

main:Toggle("Collect Meat",function(toggle)
  _G.CM = toggle
  while wait() and _G.CM do
    print("Collect meat")
    for i,v in pairs(game.workspace:GetChildren()) do
      if string.find(v.Name, "Meat") and v:FindFirstChild("Main") then
        v.Main.CFrame = game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame
        wait()
      end
    end
  end
end)

main:Toggle("Collect Coins",function(toggle)
  _G.C = toggle
  while wait() and _G.C do
    for i,v in pairs(game.Workspace.Currency:GetChildren()) do
      local args = {
        [1] = "Collect Currency",
        [2] = v.Name
      }
      game:GetService("ReplicatedStorage").RemoteEvent:FireServer(unpack(args))
    end
  end
end)

main:Toggle("Auto Sell",function(toggle)
  _G.AS = toggle
  while wait() and _G.AS do
    firetouchinterest(game:GetService("Workspace").DropOffMeat.TouchPart, lp.Character.HumanoidRootPart, 0)
    wait()
    firetouchinterest(game:GetService("Workspace").DropOffMeat.TouchPart, lp.Character.HumanoidRootPart, 1)
  end
end)
